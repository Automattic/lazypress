{
  "manifest_version": 2,
  "name": "LazyPress",
  "description": "Quote and Blog",
  "version": "1.0",
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
 "permissions": [
     "tabs",
     "http://*/",
     "https://*/"
   ]
}